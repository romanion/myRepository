<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="base.CharacteristicsEntity" table="CHARACTERISTICS1" schema="public" catalog="postgres">
        <id name="characteristicId">
            <column name="CHARACTERISTIC_ID" sql-type="integer" />
        </id>
        <property name="size">
            <column name="SIZE" sql-type="numeric" precision="-1"/>
        </property>
        <property name="color">
            <column name="COLOR" sql-type="varchar"/>
        </property>
        <property name="weight">
            <column name="WEIGHT" sql-type="numeric" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>